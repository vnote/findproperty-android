<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!--选中时的图片背景-->

    <item android:state_pressed="true" >
        <shape>
            <corners android:radius="20dp"/>
            <padding android:left="10dp" android:right="10dp" android:bottom="4dp" android:top="4dp"/>
            <stroke android:width="0.4dp" android:color="#33000000"/>
        </shape>
    </item>
    
    <item>
        <shape>
            <corners android:radius="20dp"/>
            <padding android:left="10dp" android:right="10dp" android:bottom="4dp" android:top="4dp"/>
            <stroke android:width="0.4dp" android:color="#ccc"/>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

</selector>
