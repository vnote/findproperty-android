<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!--选中时的图片背景-->

    <item android:state_checked="true" >
        <shape>
            <corners android:radius="3dp"/>
            <padding android:left="10dp" android:right="10dp" android:bottom="4dp" android:top="4dp"/>
            <stroke android:width="0.4dp" android:color="#ef6b56"/>
            <solid android:color="#ef6b56"/>
        </shape>
    </item>
    
    <item android:state_checked="false" >
        <shape>
            <corners android:radius="3dp"/>
            <padding android:left="10dp" android:right="10dp" android:bottom="4dp" android:top="4dp"/>
            <stroke android:width="0.4dp" android:color="#7c7a7a"/>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

</selector>
