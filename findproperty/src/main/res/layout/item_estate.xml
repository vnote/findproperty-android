<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="113dp"
        android:layout_height="85dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/estate_img"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/test_pic"
            android:layout_width="109dp"
            android:layout_height="81dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="11号线白硬度温热特而无法答复收费服务而额如风是否是否访问地方"
            android:textSize="@dimen/subTitle"
            android:textColor="@color/normalText"
            android:id="@+id/estate_title" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/estate_scope1"
                android:layout_marginTop="5dp"
                android:textColor="@color/grayText"
                android:layout_alignParentBottom="true"
                android:maxLines="1"
                android:text="1室1厅"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:textColor="@color/grayText"
                android:layout_alignParentBottom="true"
                android:id="@+id/estate_scope2"
                android:text="120㎡"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/estate_avg_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/unit"
                android:textSize="@dimen/title"
                android:text="12,1223"
                android:textColor="@color/appBaseColor" />
            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/㎡"
                android:textSize="@dimen/text_body"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textColor="@color/appBaseColor" />
        </LinearLayout>


        <View
            android:layout_marginTop="8dp"
            style="@style/horizontalBlackLine"
            android:background="@color/grayBigLine"/>

    </LinearLayout>

</LinearLayout>