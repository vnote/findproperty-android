<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    tools:ignore="all">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_est_estate" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/atv_img_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/title_padding_top"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="1/10" />

    <FrameLayout
        android:id="@+id/fl_title_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/atv_title_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_details_title_bg"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingBottom="9dp"
            android:paddingLeft="8dp"
            android:paddingRight="30dp"
            android:paddingTop="9dp"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:text="现代映象精装地铁房可拎包入住，首次出租有钥匙" />

    </FrameLayout>

</FrameLayout>