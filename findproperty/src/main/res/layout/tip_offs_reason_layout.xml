        android:background="@color/grayLine"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:text="其他"
        android:gravity="center"
        android:textSize="@dimen/gild_sub"
        android:textColor="@color/grayText" />

