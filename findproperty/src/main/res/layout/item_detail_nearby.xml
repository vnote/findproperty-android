<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nearby_item_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:background="@color/white"
        android:padding="6dp"
        android:elevation="6dp"
        android:src="@drawable/test_pic"/>

    <TextView
        android:id="@+id/nearby_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:lines="1"
        android:textColor="@color/normalText"
        android:ellipsize="end"
        android:text="12354"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nearby_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayText"
            android:text="1室1厅|54m|南"/>

        <com.cetnaline.findproperty.widgets.MyText
            android:id="@+id/nearby_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:leftTextColor="@color/textRed"
            app:leftTextSize="@dimen/subTitle"
            app:rightText="万"
            app:rightTextColor="@color/textRed"
            app:rightTextSize="@dimen/textSmall"/>

    </RelativeLayout>


</LinearLayout>
