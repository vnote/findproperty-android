<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popwindow_line_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/house_desc_rv"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/desc_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subTitle"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"/>

    <View
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        style="@style/horizontalGrayLine"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/house_desc_vp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="300dp">

    </android.support.v4.view.ViewPager>

    <View
        style="@style/horizontalGrayLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/desc_iv_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            app:srcCompat="@drawable/ic_phone"/>

        <View
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            style="@style/verticalBlackLineStyle"/>

        <ImageButton
            android:id="@+id/desc_iv_talk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            app:srcCompat="@drawable/ic_msg_black_24dp"/>

    </LinearLayout>


</LinearLayout>
