<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
    android:id="@+id/item_home_iv_pic"
    android:layout_width="match_parent"
    android:layout_height="375px"
    android:scaleType="centerCrop"
    android:src="@drawable/test_pic"/>

    <android.support.v7.widget.CardView
        android:id="@+id/discount_cv"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight"
        android:layout_marginTop="330px"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_home_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="学区房不是唯一的选择"
                android:textSize="@dimen/subTitle"/>

            <View
                android:layout_marginLeft="15dp"
                style="@style/ShortLineStyle"/>

            <TextView
                android:id="@+id/item_home_tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="子标题"
                android:textColor="@color/grayText"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/discount_cv"
        android:layout_marginTop="@dimen/marginLeft"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View android:layout_width="5px"
              android:layout_height="20px"
              android:background="@color/btRed"/>

        <TextView
            android:id="@+id/item_discount_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            android:textSize="@dimen/textSmall"
            android:layout_marginLeft="4dp"
            android:textColor="@color/appBaseColor"/>

        <TextView
            android:id="@+id/item_discount_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSmall"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>

    </LinearLayout>

</RelativeLayout>