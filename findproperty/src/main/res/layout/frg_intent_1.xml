<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.cetnaline.findproperty.widgets.StepLayout
            android:id="@+id/step_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="您正在寻找"
            android:textSize="@dimen/title"/>

        <com.cetnaline.findproperty.widgets.ImageSelectLayout
            android:id="@+id/image_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isSelected="true"
            app:showImg="@drawable/intent_step_1_1"/>

        <com.cetnaline.findproperty.widgets.ImageSelectLayout
            android:id="@+id/image_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isSelected="false"
            app:showImg="@drawable/intent_step_1_2"/>

        <com.cetnaline.findproperty.widgets.ImageSelectLayout
            android:id="@+id/image_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isSelected="false"
            app:showImg="@drawable/intent_step_1_3"/>
    </LinearLayout>

    <Button
        android:id="@+id/intent_bt_commit"
        style="@style/redButton"
        android:layout_alignParentBottom="true"
        android:text="下一步"/>

</RelativeLayout>

