<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.cetnaline.findproperty.widgets.CircleImageView
                android:id="@+id/look_staff_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_head"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/look_staff_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subTitle"/>

                <TextView
                    android:id="@+id/look_staff_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/item_staff_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换顾问"
                android:textColor="#999999"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_right_arrow_gray_sel"/>
        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            style="@style/horizontalBlackLine"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/look_house_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/look_house_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textRed"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>