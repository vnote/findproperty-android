<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--recycle viewpager-->
    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
    </declare-styleable>

    <!--filter menu-->
    <declare-styleable name="FilterMenuLayout">
        <attr name="fm_primaryColor" format="color|reference"/>
        <attr name="fm_primaryDarkColor" format="color|reference"/>
        <attr name="fm_expandedRadius" format="dimension"/>
        <attr name="fm_collapsedRadius" format="dimension"/>
        <attr name="fm_centerLeft" format="dimension"/>
        <attr name="fm_centerRight" format="dimension"/>
        <attr name="fm_centerTop" format="dimension"/>
        <attr name="fm_centerHorizontal" format="boolean"/>
        <attr name="fm_centerVertical" format="boolean"/>
        <attr name="fm_centerBottom" format="dimension"/>
        <attr name="fm_sweepAngle" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ExpandablePager">
        <attr name="animation_duration" format="integer" />
        <attr name="collapsed_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="MyText">
        <attr name="rightText" format="string"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextColor" format="color"/>
        <attr name="rightPaddingLeft" format="dimension"/>
        <attr name="rightPaddingTop" format="dimension"/>
        <attr name="rightPaddingRight" format="dimension"/>
        <attr name="rightPaddingBottom" format="dimension"/>

        <attr name="leftText" format="string"/>
        <attr name="leftTextSize" format="dimension"/>
        <attr name="leftTextColor" format="color"/>
        <attr name="leftPaddingLeft" format="dimension"/>
        <attr name="leftPaddingTop" format="dimension"/>
        <attr name="leftPaddingRight" format="dimension"/>
        <attr name="leftPaddingBottom" format="dimension"/>
    </declare-styleable>

    <attr name="left_img" format="reference"/>
    <attr name="title" format="string"/>

    <!--mine menu style-->
    <declare-styleable name="MineMenuItem">
        <attr name="title"/>
        <attr name="left_img"/>
        <attr name="left_sel_img" format="reference"/>
        <attr name="show_hint" format="boolean"/>
        <attr name="show_arrow" format="boolean"/>
    </declare-styleable>

    <!--form item layout style-->
    <declare-styleable name="FormItemLayout">
        <attr name="title"/>
        <attr name="content_hint" format="string"/>
        <attr name="content_ext" format="string"/>
        <attr name="show_ext" format="boolean"/>
        <attr name="show_right_img" format="boolean"/>
        <attr name="show_touch_view" format="boolean"/>
        <attr name="input_enable" format="boolean"/>
        <attr name="input_text_color" format="color"/>
        <attr name="ext_background" format="reference"/>
        <attr name="input_type">
            <flag name="text" value="0"/>
            <flag name="number" value="1"/>
            <flag name="integer" value="2"/>
        </attr>
        <attr name="input_length" format="integer"/>
    </declare-styleable>

    <!--remark edittext layout style-->
    <declare-styleable name="RemarkEditTextLayout">
        <attr name="content_hint"/>
        <attr name="max_length" format="integer"/>
    </declare-styleable>


    <declare-styleable name="CustomMenuItem">
        <attr name="left_img"/>
        <attr name="title"/>
        <attr name="sub_title" format="string"/>
    </declare-styleable>

    <declare-styleable name="RangeSeekBar">
        <attr name="max" format="float"/>
        <attr name="min" format="float"/>
        <attr name="reserve" format="float"/>
        <attr name="cells" format="integer"/>
        <attr name="lineColorSelected" format="color"/>
        <attr name="lineColorEdge" format="color"/>
        <attr name="seekBarResId" format="reference"/>
        <attr name="seekBarRightId" format="reference"/>
        <attr name="scaleNum" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SettingMenuItem">
        <attr name="menu_title" format="string"/>
        <attr name="show_image" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="indicator_icon" format="reference" />
        <attr name="indicator_margin" format="dimension" />
        <attr name="indicator_smooth" format="boolean" />
    </declare-styleable>

    <item name="internal_page_id" type="id" />
    <item name="internal_pager_id" type="id" />

    <item name="bottom_title_rf" type="id"></item>
    <item name="bottom_title_left" type="id" />
    <item name="bottom_title" type="id"></item>
    <item name="bottom_title_right" type="id"></item>
    <item name="vp_number_indicator" type="id"></item>

    <attr name="position">
        <enum name="left_top" value="0" />
        <enum name="left_bottom" value="1" />
        <enum name="right_top" value="2" />
        <enum name="right_bottom" value="3" />
    </attr>
    <attr name="radius" format="dimension" />
    <declare-styleable name="SatellitemenuView">
        <attr name="position"></attr>
        <attr name="radius" />
    </declare-styleable>

    <attr name="isSelected" format="boolean"/>
    <attr name="showTagText" format="reference|string"/>

    <declare-styleable name="ImageSelectLayout">
        <attr name="isSelected"/>
        <attr name="showImg" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SelectTagLayout">
        <attr name="isSelected"/>
        <attr name="selectedValue" format="integer"/>
        <attr name="selectedValueExt" format="integer"/>
        <attr name="showTagText"/>
    </declare-styleable>

    <declare-styleable name="GScopeItem">
        <attr name="showTagText"/>
        <attr name="isSelected"/>
        <attr name="titleSize" format="dimension"/>
        <attr name="showIcon" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MRecyclerView">
        <attr name="LayoutModel" format="enum">
            <enum name="VerticalLinear" value="0" />
            <enum name="HorizontalLinear" value="1" />
            <enum name="StaggeredGrid" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="HorizontalItemSelector">
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="values" format="reference" />
        <attr name="android:ellipsize" />
        <attr name="android:marqueeRepeatLimit" />
        <attr name="dividerSize" format="dimension" />
        <attr name="sideItems" format="integer" />
    </declare-styleable>

    <attr name="horizontalSelector" format="reference"/>
    
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension"/>
        <attr name="src" format="reference"/>
        <attr name="type">
            <enum name="circle" value="0"/>
            <enum name="round" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="HorizontalProgressBarWithNumber">
        <attr name="progress_unreached_color" format="color" />
        <attr name="progress_reached_color" format="color" />
        <attr name="progress_reached_bar_height" format="dimension" />
        <attr name="progress_unreached_bar_height" format="dimension" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_offset" format="dimension" />
        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="RoundProgressBarWidthNumber">
        <attr name="radius"/>
    </declare-styleable>

</resources>